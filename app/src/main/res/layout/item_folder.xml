<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
 >
    <LinearLayout
        android:id="@+id/cvBG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_15sdp"
        >
            <RelativeLayout
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:orientation="vertical"
                android:background="@drawable/bg_categories"
                android:gravity="center">

                <ImageView
                    android:id="@+id/folder_image"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/iconbackground"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:src="@drawable/air_horn_test" />

                <TextView
                    android:id="@+id/folder_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_extrabold"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:singleLine="true"
                    android:layout_alignParentBottom="true"
                    android:text="Hair Clipper"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/text_color"
                    android:textSize="20dp" />
            </RelativeLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_event"
        android:visibility="invisible"
        android:layout_width="@dimen/_50ssp"
        android:layout_height="@dimen/_25ssp"
        android:textColor="@color/white"
        android:layout_alignEnd="@+id/cvBG"
        android:layout_marginEnd="@dimen/_minus8sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:textAlignment="center"
        android:fontFamily="@font/inter_extrabold"
        android:gravity="center"
        android:text="EVENT"
        android:background="@drawable/bg_event"
        android:textSize="@dimen/_12sdp"/>
    <TextView
        android:id="@+id/tv_new"
        android:visibility="invisible"
        android:layout_width="@dimen/_50ssp"
        android:layout_height="@dimen/_25ssp"
        android:textColor="@color/white"
        android:layout_alignEnd="@+id/cvBG"
        android:layout_marginEnd="@dimen/_minus8sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:textAlignment="center"
        android:fontFamily="@font/inter_extrabold"
        android:gravity="center"
        android:text="NEW"
        android:background="@drawable/bg_new"
        android:textSize="@dimen/_12sdp"/>
</RelativeLayout>