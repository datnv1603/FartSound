<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/cvBG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_15sdp">

        <RelativeLayout
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:background="@drawable/bg_categories"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/folder_image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_30sdp"
                android:background="@drawable/iconbackground"
                android:src="@drawable/air_horn_test" />

            <TextView
                android:id="@+id/folder_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="@font/nunito_extra_bold"
                android:singleLine="true"
                android:text="@string/hair_clipper"
                android:textColor="@color/text_color"
                android:textSize="20sp" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_event"
        android:layout_width="@dimen/_50ssp"
        android:layout_height="@dimen/_25ssp"
        android:layout_alignEnd="@+id/cvBG"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_minus8sdp"
        android:background="@drawable/bg_event"
        android:fontFamily="@font/nunito_extra_bold"
        android:gravity="center"
        android:text="@string/event"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_new"
        android:layout_width="@dimen/_50ssp"
        android:layout_height="@dimen/_25ssp"
        android:layout_alignEnd="@+id/cvBG"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_minus8sdp"
        android:background="@drawable/bg_new"
        android:fontFamily="@font/nunito_extra_bold"
        android:gravity="center"
        android:text="@string/new_"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:visibility="invisible" />
</RelativeLayout>