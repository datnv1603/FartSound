<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PrankSound" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/action_color</item>
        <item name="android:statusBarColor">@color/action_color</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.PrankSound" parent="Base.Theme.PrankSound" />

    <style name="AppTheme_AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12dp</item>
        <item name="android:text">Ad</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:width">15dp</item>
        <item name="android:height">15dp</item>
    </style>
    <style name="myPopupMenu">
        <item name="android:textSize">@dimen/_17sdp</item>
        <item name="android:textColor">@color/colorTextTime</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:width">@dimen/_30sdp</item>

    </style>

    <style name="AdsAppTheme" parent="Theme.AppCompat.Light" />

    <style name="AppTheme.Ads" parent="@style/AdsAppTheme">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">@drawable/icon_ads</item>
        <item name="android:paddingLeft">3.0dip</item>
        <item name="android:paddingRight">6.0dip</item>
        <item name="android:paddingBottom">1.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">15dp</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:text">Ad</item>
    </style>
</resources>