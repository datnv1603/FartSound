<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>
    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">#00000000</item>
        <item name="android:navigationBarColor">#263340</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustNothing</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:radius">@dimen/_100sdp</item>
    </style>

    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/bg_options</item>
        <item name="android:width">@dimen/_30sdp</item>
        <item name="android:gravity">end</item>

    </style>
</resources>